<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.github.mullerdaniil.miranda.ui.controller.QuestionTrainingController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TabPane tabClosingPolicy="UNAVAILABLE">
        <Tab text="Training">
            <VBox fx:id="trainingTabVBox">
                <Label text="Filters:">
                    <VBox.margin>
                        <Insets>
                            <top>10</top>
                        </Insets>
                    </VBox.margin>
                </Label>

                <GridPane hgap="10" vgap="5">
                    <Label text="Lowest points:" GridPane.rowIndex="0" GridPane.columnIndex="0">
                    </Label>
                    <Spinner fx:id="maxPointsFilterSpinner" min="0" max="12" GridPane.rowIndex="0" GridPane.columnIndex="1">
                    </Spinner>
                    <Label text="Tags:" GridPane.rowIndex="1" GridPane.columnIndex="0">
                    </Label>
                    <MenuButton fx:id="availableTagsMenuButton" GridPane.rowIndex="1" GridPane.columnIndex="1">
                    </MenuButton>
                </GridPane>

                <Label text="Tags">
                    <VBox.margin>
                        <Insets>
                            <top>10</top>
                        </Insets>
                    </VBox.margin>
                </Label>

                <FlowPane fx:id="currentQuestionTagsFlowPane" hgap="5">
                </FlowPane>

                <BorderPane>
                    <VBox.margin>
                        <Insets>
                            <top>10</top>
                        </Insets>
                    </VBox.margin>

                    <left>
                        <Label text="Question">
                        </Label>
                    </left>

                    <right>
                        <Label fx:id="currentQuestionPointsLabel">
                        </Label>
                    </right>
                </BorderPane>
                <VBox prefHeight="100" alignment="CENTER" styleClass="list-view">
                    <Text fx:id="questionText" style="-fx-font-family: 'Lucida Console';">
                    </Text>
                </VBox>
                <Label text="Answer">
                    <VBox.margin>
                        <Insets>
                            <top>10</top>
                        </Insets>
                    </VBox.margin>
                </Label>
                <VBox fx:id="answerVBox" prefHeight="300" alignment="CENTER" styleClass="list-view">
                    <Text fx:id="answerText" style="-fx-font-family: 'Lucida Console';">
                    </Text>
                </VBox>
                <BorderPane>
                    <VBox.margin>
                        <Insets>
                            <top>10</top>
                        </Insets>
                    </VBox.margin>
                    <left>
                        <Button text="Yes (A)"
                                style="-fx-background-color: -color-success-muted;"
                                onAction="#setQuestionAnswered">
                        </Button>
                    </left>
                    <center>
                        <Button text="Show Answer (S)"
                                style="-fx-background-color: -color-accent-muted;"
                                onAction="#showAnswer">
                        </Button>
                    </center>
                    <right>
                        <Button text="No (D)"
                                style="-fx-background-color: -color-danger-muted;"
                                onAction="#setQuestionNotAnswered">
                        </Button>
                    </right>
                </BorderPane>
            </VBox>
        </Tab>
        <Tab text="Create">
            <VBox>
                <VBox.margin>
                    <Insets>
                        <top>10</top>
                    </Insets>
                </VBox.margin>

                <VBox>
                    <Label text="Question">
                        <VBox.margin>
                            <Insets>
                                <top>10</top>
                            </Insets>
                        </VBox.margin>
                    </Label>
                    <TextArea fx:id="createQuestionTextArea" prefHeight="150"
                              style="-fx-font-family: 'Lucida Console';">
                    </TextArea>

                    <Label text="Answer">
                        <VBox.margin>
                            <Insets>
                                <top>10</top>
                            </Insets>
                        </VBox.margin>
                    </Label>
                    <TextArea fx:id="createAnswerTextArea" prefHeight="350" style="-fx-font-family: 'Lucida Console';">
                    </TextArea>

                    <Label text="Tags">
                        <VBox.margin>
                            <Insets>
                                <top>10</top>
                            </Insets>
                        </VBox.margin>
                    </Label>
                    <ListView fx:id="createQuestionTagNamesListView" prefHeight="200">
                    </ListView>

                    <Button text="Create" onAction="#createNewQuestion" style="-fx-background-color: -color-accent-muted;">
                        <VBox.margin>
                            <Insets>
                                <top>10</top>
                            </Insets>
                        </VBox.margin>
                    </Button>
                </VBox>
            </VBox>
        </Tab>

        <Tab text="New Tag">
            <VBox>
                <Label text="Name">
                    <VBox.margin>
                        <Insets>
                            <top>10</top>
                        </Insets>
                    </VBox.margin>
                </Label>
                <TextField>
                </TextField>

                <Label text="Color">
                    <VBox.margin>
                        <Insets>
                            <top>10</top>
                        </Insets>
                    </VBox.margin>
                </Label>
                <ColorPicker>
                </ColorPicker>

                <Button text="Create Tag">
                    <VBox.margin>
                        <Insets>
                            <top>10</top>
                        </Insets>
                    </VBox.margin>
                </Button>
            </VBox>
        </Tab>

        <Tab text="Monitoring">
            <!--            todo: create monitoring .fxml-->
        </Tab>
    </TabPane>
</VBox>
